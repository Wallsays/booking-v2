<div class="navbar navbar-inverse ">
  <div class="navbar-inner">
   <div class="container">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to root_path do %>
        <%= image_tag("logo_icon_transp_100x100_v2.png", class: "brand brand_icon") %>
      <% end %>
      <%= link_to t("brand_text"), root_path , :class => "brand"%>

      <div class="nav-collapse collapse navbar-responsive-collapse">
        <ul class="nav">
          <%= nav_link t("home"), root_path %>
          <%= nav_link t("restaurants"), restaurants_path %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=  t("cuisines") %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% RestaurantTag.where("title LIKE ?", "Cuisine:%").each do |c| %>
                <li>
                  <!-- TODO: refactor link/routes -->
                  <%= link_to "#{c.title.slice(8..c.title.length)}", "search?utf8=✓&price%5B%5D=Any&cuisine%5B%5D=#{c.id}&location%5B%5D=Any&commit=Search" unless c.title.slice(8..c.title.length) == "Any" %>
                </li>
              <% end %> 
            </ul>
          </li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=  t("price") %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% RestaurantTag.where("title LIKE ?", "Price:%").each do |c| %>
                <li>
                  <!-- TODO: refactor link/routes -->
                  <%= link_to "#{c.title.slice(6..c.title.length)}", "search?utf8=✓&price%5B%5D=#{c.title.slice(6..c.title.length).length}&cuisine%5B%5D=1&location%5B%5D=Any&commit=Search" %>
                </li>
              <% end %> 
            </ul>
          </li>

          <%= nav_link t("reservations"), reservations_path if owner_signed_in? or user_signed_in?%>
        </ul>
        <!-- <form class="navbar-search pull-left" action="">
          <input type="text" class="search-query span2" placeholder="Search">
        </form> -->
        <ul class="nav pull-right">
          <!-- <li><a href="#">Link</a></li> -->
          <!-- <li class="divider-vertical"></li> -->
             <% if user_signed_in? or owner_signed_in? %>
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.username %><b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Edit account details", edit_user_registration_path %></li>
                    <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                  </ul>
                </li>
              <% else %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_owner.owner_name %><b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "My Restaurant", current_owner.restaurant.blank? ? new_restaurant_path  : edit_restaurant_path(current_owner.restaurant)  %></li>
                    <li><%= link_to "My Reservations", reservations_path %></li>
                    <li><%= link_to "My Inventories", my_inventories_path unless current_owner.restaurant.blank?
                     %></li>
                    <li><%= link_to "My Inventory Templates", my_inventory_templates_path unless current_owner.restaurant.blank? %></li>
                     <li><%= link_to t("inventories"), inventories_path %></li>
                    <li><%= link_to t("Inventory_templates"), inventory_templates_path %></li>
                    <li><%= link_to "Edit account details", edit_owner_registration_path %></li>
                    <li><%= link_to "Logout", destroy_owner_session_path, method: :delete %></li>
                  </ul>
                </li>
              <% end %> 
            <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">User<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Login as user", new_user_session_path %></li>
                  <li><%= link_to "Registration for users", new_user_registration_path %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Owner<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Login as Owner", new_owner_session_path %></li>
                  <li><%= link_to "Registration for Owners", new_owner_registration_path %></li>
                </ul>
              </li>
            <% end %>
        </ul>
      </div><!-- /.nav-collapse -->
    </div>
   </div>
  </div><!-- /navbar-inner -->
</div>