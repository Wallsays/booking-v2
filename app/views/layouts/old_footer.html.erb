<div id="footer">
  <div class="container">
    <div class="row-fluid">
     <div class="span5">
      <%= image_tag("logo_icon.png", size: "80x80", class: "footer_logo_icon") %>
       <p class="text-muted credit">&copy; 2013 AppServation Co. Ltd.<br/>
        Soi Chula 12, Phyathai Road<br/>
        Bangkok 10330<br/>
        Thailand<br/>
       </p>
     </div>

     <div class="span2">
      <ul class="footer-links">
        <li><a href="#">Contact Us</a></li>
        <li><a href="#">Terms of use</a></li>
        <li><a href="#">Privacy</a></li>
      </ul>
     </div>

     <div class="span2">
      <ul class="footer-links">
        <li><a href="#">About</a></li>
        <li><a href="#">Jobs</a></li>
        <li><a href="#">News</a></li>
        <li><a href="#">Blog</a></li>
      </ul>
     </div>

     <div class="span3">
       <div class="row-fluid" >
         <div class="soc_links">
           <a href="#"><img class="img-square soc_link" src="/assets/_facebook.png" style="width: 40px; height: 40px;"></a>
           <a href="#"><img class="img-square soc_link" src="/assets/_twitter.png" style="width: 40px; height: 40px;"></a>
         </div>

        <%= form_tag root_url, class: 'locale' do %>
          <%= select_tag 'set_locale',
              options_for_select(LANGUAGES, I18n.locale.to_s),
              onchange: 'this.form.submit()' %>
          <%= submit_tag 'submit' %>
          <%= javascript_tag "$('.locale input').hide()" %>
        <% end %>
      </div>
     </div>


    </div>
  </div>
</div>