<h1>Search Results</h1>
<p>You seached for 
    <%= @search_terms.join(", ") %> 
 </p>
 <p />

<% unless @search_results.blank? %>
  <%= image_tag @image_tag_string %>
  <table  class="table table-striped table-bordered table-hover" >
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Restaurant tags</th>
      <th>Misc</th>
      <!-- <th></th> -->
    </tr> 
  </thead>

  <% @search_results.each do |restaurant| %>
    <tr>
      <td><%= image_tag restaurant.photos.first.picture.url(:v100x100) if restaurant.photos.first %></td>
      <td><%= link_to "#{restaurant.name}", restaurant %></td>
      <td><%= join_restaurant_tags(restaurant) %></td>
      <td><%= truncate(restaurant.misc, length: 50, omission: '... (continued)') %></td>
      <!-- <td><%= link_to 'Show', restaurant %></td> -->
    </tr>
  <% end %>
</table>  

<br />

<% else %>
  The are no restaurants found
  <br /> Please, change your request
<% end %>
