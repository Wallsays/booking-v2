  <div class="span9">
    <div class="hero-unit">
      <h1>Bangkok Restaurant Booking!</h1>
      <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
      <p>
        <a href="#" class="btn btn-primary btn-large">Learn more »</a>
        <%= link_to "Calendar", calendar_path , :class => "btn btn-info btn-large"%>
      </p>
    </div>
    <div class="row-fluid" style="padding-bottom: 30px;">
        <!-- <p><img src="hh_logo.jpg"></p> -->

          <%= form_tag("/search", method: "get") do %>
          <div class="span3">
              <label for="price">Price</label>
              <%= select_tag "price" , "
            <option selected=\"selected\">Any</option>
            <option value=\"1\">$</option>
            <option value=\"2\">$$</option>
            <option value=\"3\">$$$</option>
            <option value=\"4\">$$$$</option>
            <option value=\"5\">$$$$$</option>".html_safe, :multiple => true, :include_blank => false%>  
          </div>
            
          <div class="span3">
            <label for="cuisine">Cuisine</label>
            <%= select_tag "cuisine", options_for_select( RestaurantTag.where("title LIKE ?", "Cuisine:%").map {|c| [c.title.slice(8..c.title.length) , c.id]}, :selected => 1), :multiple => true %>
          </div>

          <div class="span3">
            <label for="location">Location</label>
            <%= select_tag "location" , "
            
          <option selected=\"selected\">Any</option>
          <option>Surawong</option>
          <option>Thonglor</option>
          <option>Sukhumvit</option>".html_safe, :multiple => true, :include_blank => false%>
          </div>
          
          <div class="span3">
            <%= submit_tag "Search", :class => 'btn btn-success btn-large' %>
          </div>
          <% end %>

    </div><!--/row-->
    <div class="row-fluid">
      <% @restaurants.each do |restaurant| %>
        <div class="span4 restaurants_mini">
          <h3><%= restaurant.name %></h3>
          <p><%= image_tag restaurant.photos.first.picture.url(:v280x160) if restaurant.photos.first %> </p>
          <p><%= truncate(restaurant.misc, length: 200, omission: '... (continued)') %> </p>
          <p><%= link_to 'Show', restaurant, class: "btn" %></p>
          <!-- <p><a class="btn" href="#">View details »</a></p> -->
        </div><!--/span-->
      <% end %>

     
    </div><!--/row-->
