<h1>Listing inventory Template Groups</h1>

<% unless @inventory_template_groups.blank? %>
  <table  class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Primary</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <% @inventory_template_groups.each do |itg| %>
      <tr>
        <td><%= itg.restaurant.name %></td>
        <td><%= itg.name %></td>
        <td><%= itg.primary %></td>
        <td><%= link_to 'Show', itg %></td>
        <td><%= link_to 'Edit', edit_inventory_template_group_path(itg) %></td>
        <td><%= link_to 'Destroy', itg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  There no inventories now
<% end %>

<br />

<%= link_to 'New Inventory Template Group', new_inventory_template_group_path if owner_signed_in?  %>

