<h1>Listing reservations</h1>

<% unless @reservations.blank? %>
<table  class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>User</th>
    <th>Restaurant</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Party size</th>
    <th width="100px">Table</th>
    <!-- <th>Active</th> -->
    <!-- <th>Edit Active</th> -->
    <% if owner_signed_in? %>
      <th>No Show</th>
      <th>Party Arrived</th>
      <th>Remove</th>
    <% else %>
      <th></th>
    <% end %>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

<% @reservations.each do |reservation| %>
  <tr>
    <td>
      <% if reservation.user %>
          <%= reservation.user.username  %>
      <% else %>
        <%= "#{reservation.name} /" %> 
        <%= "#{reservation.phone} /" %> 
        <%= reservation.email %>
      <% end %>
    </td>
    <td><%= reservation.restaurant.name %></td>
    <td><%= reservation.date %></td>
    <td>
    <% if owner_signed_in? %>
      <%= best_in_place reservation, :start_time, :type => :date, :display_as => :format_time %>
      <!-- , :display_with => Proc.new { |f| f.strftime("%H:%M") } -->
    <% else %>
      <%= mtime(reservation.start_time) %>
    <% end %> 
    </td>
    <td><%= mtime(reservation.end_time) %></td>
    <td>
      <%= content_tag :div, :class => 'bip_reservation_party_size' do %>
        <%= best_in_place reservation, :party_size %>
      <% end %>
    </td>
    <td>
    <% if owner_signed_in? %>
        <%= content_tag :div, :class => 'bip_reservation_table' do %>
          <%= best_in_place reservation, :table, :type => :textarea, :display_with => :truncate, :helper_options => { :length => 80 }, :class => "bip_reservation_table" %>
        <% end %>
    <% else %>
        <%= truncate(reservation.table, length: 100, omission: '...') %>
    <% end %> 
    </td>
    <!-- <td><%= reservation.active %></td> -->
    <% if owner_signed_in? %>
      <td>
        <%= link_to "#{bool_to_activity(reservation.no_show)}", toggle_reservation_url(reservation, :arg => "no_show"), :method => :put, :class => "btn"%>
      </td>
      <td>
        <%= link_to "#{bool_to_activity(reservation.arrived)}", toggle_reservation_url(reservation, :arg => "arrived"), :method => :put, :class => "btn"%>
      </td>
      <td>
        <%= link_to "#{bool_to_activity(reservation.active)}", toggle_reservation_url(reservation, :arg => "active"), :method => :put, :class => "btn"%>
      </td>
    <% else %>
      <td>
        <%= link_to "Switch to #{bool_to_activity(oppsite_bool(reservation.active))}", toggle_reservation_url(reservation, :arg => "active"), :method => :put, :class => "btn"%>
      </td>
    <% end %>
    <td>
        <%= link_to 'Show', reservation %><br />
        <%= link_to 'View Reward', reservation.reward %>
    </td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<% else %>
  <%= "No reservations in your restaurant" if owner_signed_in? %>
<% end %>

<br />

<%= link_to 'New Reservation', new_reservation_path if owner_signed_in? or user_signed_in? %>


<% @cal = true %>
<% if owner_signed_in? and @cal %>
  <div id="reservations">
    <h3 id="month">
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month %>
    </h3>
    <%= calendar @date do |date| %>
      <%= content_tag :div, :class => ('today' if (date == @date) ) do %>
        <%= link_to date.day, date: date %>
      <% end %>
    <% end %>
  </div>

  <p />
  
  <h3>Available places at <%= @date %></h3>
  <table class="table table-striped table-bordered table-hover" style="float:left;">
    <thead>
      <tr>
        <th></th>
        <% get_intervals.each_with_index do |interval, index| %>
          <% if index%4 == 0 and interval != "24:00" %>
            <th><%= interval.slice(0..1) %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>

    <tr>
      <td style="font-weight:bold;">00</td>
      <% 24.times do |i| %>
        <td><%= @quantity[0][i] %></td>
      <% end %>
    </tr>
    <tr>
      <td style="font-weight:bold;">15</td>
      <% 24.times do |i| %>
        <td><%= @quantity[1][i] %></td>
      <% end %>
    </tr>
    <tr>
      <td style="font-weight:bold;">30</td>
      <% 24.times do |i| %>
        <td><%= @quantity[2][i] %></td>
      <% end %>
    </tr>
    <tr>
      <td style="font-weight:bold;">45</td>
      <% 24.times do |i| %>
        <td><%= @quantity[3][i] %></td>
      <% end %>
    </tr>
  </table>

<% end %>



<p />