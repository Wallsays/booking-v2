<%= simple_form_for([@reservation], html: { class: "form-horizontal"}) do |f| %>

  <%= f.association :restaurant, label: "Restaurant" %>
  <%= f.input :date, label: "Date" %>
  <%= f.input :start_time, :minute_step => 15, label: "Start Time" %>
  <%= f.input :end_time, :minute_step => 15, label: "End Time" %>
  <%= f.input :party_size, label: "Party Size" %>
  <%= f.input :active, label: "active" %>
 
  <div class="actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
 
<% end %>