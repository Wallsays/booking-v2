<h1>Listing restaurants</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <!-- <th>Category</th> -->
      <!-- <th>Price</th> -->
      <th>Restaurant tags</th>
      <th>Misc</th>
      <!-- <th></th> -->
      <!--<th></th>-->
      <!--<th></th>-->
    </tr> 
  </thead>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= image_tag restaurant.photos.first.picture.url(:v100x100) if restaurant.photos.first %></td>
    <td><%= link_to "#{restaurant.name}", restaurant %></td>
    <!-- <td><%= restaurant.category %></td> -->
    <td><%= join_restaurant_tags(restaurant) %></td>
    <td><%= truncate(restaurant.misc, length: 100, omission: '... (continued)') %></td>
    <!-- <td><%= link_to 'Show', restaurant %></td> -->
    <!-- <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td> -->
    <!-- <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
  </tr>
<% end %>
</table>

